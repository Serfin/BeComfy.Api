{
  "app": {
    "name": "api-gateway"
  },
  "logger": {
    "enabled": true,
    "writeToConsole": true,
    "minimumLevel": "Information",
    "logStorage": "ElasticSearch",
    "loggerConfig": {
        "indexPattern": "becomfy-{yyyy-MM-dd}",
        "loggerConnectionOptions": {
            "scheme": "http",
            "url": "localhost",
            "port": 9200
        }
    }
  },
  "rabbitMq": {
    "namespace": "api",
    "retries": 3,
    "retryInterval": 2,
    "username": "guest",
    "password": "guest",
    "virtualHost": "/",
    "port": 5672,
    "hostnames": [
      "localhost"
    ],
    "requestTimeout": "00:00:10",
    "publishConfirmTimeout": "00:00:01",
    "recoveryInterval": "00:00:10",
    "persistentDeliveryMode": true,
    "autoCloseConnection": true,
    "automaticRecovery": true,
    "topologyRecovery": true,
    "exchange": {
      "durable": true,
      "autoDelete": false,
      "type": "Topic"
    },
    "queue": {
      "autoDelete": false,
      "durable": true,
      "exclusive": false
    }
  },
  "jaeger": {
    "enabled": true,
    "serviceName": "api",
    "udpHost": "localhost",
    "udpPort": 6831,
    "maxPacketSize": 0,
    "sampler": "const"
  },
  "jwt": {
    "secretKey": "aUJsAgwCSPCuYYgnGSVBWUgXLUZtNqPXTDPsvKKffYZMXMEuzpaYHBvYdWfHxcptFUUQXH",
    "expiryMinutes": 30,
    "issuer": "becomfy-identity-service",
    "validateLifetime": true
  },
  "restEase": {
    "services": [
      {
        "name": "becomfy-services-flights",
        "scheme": "http",
        "host": "localhost",
        "port": 5005
      },
      {
        "name": "becomfy-services-airplanes",
        "scheme": "http",
        "host": "localhost",
        "port": 5015
      },
      {
        "name": "becomfy-services-customers",
        "scheme": "http",
        "host": "localhost",
        "port": 5025
      },
      {
        "name": "becomfy-services-tickets",
        "scheme": "http",
        "host": "localhost",
        "port": 5020
      }
    ]
  }
}
